<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutSelesaiPesanan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelesaiPesananActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/idPesananText"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="ID Pesanan: "
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="68dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/idPesanan"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="TextView"
            android:textAlignment="viewStart"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="68dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/idPesananText"/>

        <TextView
            android:id="@+id/biayaPesananText"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="Biaya:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/idPesananText"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="109dp" />

        <TextView
            android:id="@+id/biayaPesanan"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="TextView"
            android:textAlignment="viewStart"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="109dp"
            app:layout_constraintStart_toEndOf="@id/biayaPesananText"
            app:layout_constraintTop_toBottomOf="@id/idPesanan"/>

        <TextView
            android:id="@+id/hariPesanan"
            android:layout_width="58dp"
            android:layout_height="19dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@id/hariPesananText"
            app:layout_constraintTop_toBottomOf="@id/biayaPesanan"
            android:textAlignment="viewStart"
            tools:layout_editor_absoluteX="174dp"
            tools:layout_editor_absoluteY="152dp" />

        <TextView
            android:id="@+id/hariPesananText"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="Jumlah Hari:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/biayaPesananText"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="152dp" />

        <TextView
            android:id="@+id/tanggalPesanan"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@id/tanggalPesananText"
            app:layout_constraintTop_toBottomOf="@id/hariPesanan"
            android:textAlignment="viewStart"
            tools:layout_editor_absoluteX="175dp"
            tools:layout_editor_absoluteY="200dp" />

        <TextView
            android:id="@+id/tanggalPesananText"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="Tanggal Pesan:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hariPesananText"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="200dp" />

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="37dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonPesananSelesai"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="85dp"
            android:layout_height="37dp"
            android:layout_marginStart="3dp"
            android:text="Selesai"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonPesananDibatalkan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/buttonPesananDibatalkan"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="171dp"
            android:text="Dibatalkan"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonPesananSelesai"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
